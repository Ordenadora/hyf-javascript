var a = 5;
var b = 12;
var c = 4.6;
a *= 5;
b *= 3;
c *= 10;

/* Compound Assignment With Augmented Division */
var a = 48;
var b = 108;
var c = 33;
a /= 12;
b /= 4;
c /= 11;

/* Convert Celsius to Fahrenheit */
function convertToF(celsius) {
    var fahrenheit;
    // Only change code below this line
    fahrenheit = (celsius *(9/5)) +32;
    return fahrenheit;
}
// change the inputs below to test your code
convertToF(30);

